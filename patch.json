{
  "spec": {
    "template": {
      "spec": {
        "volumes": [
          {
            "name": "nginx-config",
            "configMap": {
              "name": "nginx-config",
              "items": [
                {
                  "key": "nginx",
                  "path": "default.conf"
                }
              ]
            }
          }
        ],
        "containers": [
          {
            "name": "frontend",
            "volumeMounts": [
              {
                "name": "nginx-config",
                "mountPath": "/etc/nginx/conf.d/default.conf",
                "subPath": "default.conf"
              }
            ]
          }
        ]
      }
    }
  }
}
