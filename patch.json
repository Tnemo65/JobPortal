{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "frontend",
    "namespace": "default"
  },
  "spec": {
    "template": {
      "spec": {
        "volumes": [
          {
            "name": "nginx-config",
            "configMap": {
              "name": "nginx-config",
              "items": [
                {
                  "key": "nginx.conf",
                  "path": "default.conf"
                }
              ]
            }
          }
        ],
        "containers": [
          {
            "name": "frontend",
            "volumeMounts": [
              {
                "name": "nginx-config",
                "mountPath": "/etc/nginx/conf.d/default.conf",
                "subPath": "default.conf"
              }
            ]
          }
        ]
      }
    }
  }
}
